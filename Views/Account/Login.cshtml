@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center mt-5">
    <div class="dungeon-panel" style="max-width: 420px; width:100%">

        <h2 class="text-center themed-title mb-4">Login</h2>

        <!-- Display error message -->
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.ErrorMessage</div>
        }

        <!-- Login form -->
        <form asp-action="Login" method="post">

            <!-- USERNAME -->
            <div class="form-group mb-3">
                <label class="form-label dungeon-label">Username</label>
                <input type="text" name="username" class="form-control dungeon-input" required />
            </div>

            <!-- PASSWORD -->
            <div class="form-group mb-4">
                <label class="form-label dungeon-label">Password</label>
                <input type="password" name="password" class="form-control dungeon-input" required />
            </div>

            <!-- SUBMIT -->
            <button type="submit" class="btn-dungeon w-100 mt-2">
                Login
            </button>

        </form>

    </div>
</div>
