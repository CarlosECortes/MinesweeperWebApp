<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MinesweeperWebApp</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Your custom site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Optional generated styles -->
    <link rel="stylesheet" href="~/MinesweeperWebApp.styles.css" asp-append-version="true" />
</head>

<body class="dungeon-bg">

    <!-- =========================
         DUNGEON THEME NAVBAR
       ========================= -->
    <header>
        <nav class="navbar navbar-expand-sm dungeon-nav shadow-lg">
            <div class="container-fluid">

                <!-- Brand / Title -->
                <a class="navbar-brand dungeon-brand"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    ⚔️ Minesweeper
                </a>

                <!-- Hamburger for mobile -->
                <button class="navbar-toggler dungeon-toggler" type="button"
                        data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Nav Menu -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link dungeon-link" asp-area="" asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link dungeon-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                Privacy
                            </a>
                        </li>

                        <!-- If NOT logged in -->
                        @if (Context.Session.GetString("Username") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link dungeon-link" asp-controller="Account" asp-action="Register">
                                    Register
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link dungeon-link" asp-controller="Account" asp-action="Login">
                                    Login
                                </a>
                            </li>
                        }
                        else
                        {
                            <!-- If logged in -->
                            <li class="nav-item">
                                <a class="nav-link dungeon-link" asp-controller="Game" asp-action="StartGame">
                                    Start Game
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Game" asp-action="SavedGames">
                                    Saved Games
                                </a>
                            </li>


                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit"
                                            class="btn btn-link nav-link dungeon-link"
                                            style="padding:0;">
                                        Logout (@Context.Session.GetString("Username"))
                                    </button>
                                </form>
                            </li>
                        }

                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <!-- Main content area -->
    <div class="container mt-4 text-light">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="border-top footer dungeon-footer text-center text-muted mt-5">
        <div class="container">
            &copy; 2025 - MinesweeperWebApp
            <a class="dungeon-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
